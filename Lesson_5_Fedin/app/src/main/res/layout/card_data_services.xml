<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxWidth="92dp"
        android:maxHeight="92dp"
        android:scaleType="centerInside"
        tools:srcCompat="@drawable/ic_test" />
    <ImageView
        android:id="@+id/drawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_more_vert_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/title"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/warm_grey_two"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="6sp"
        tools:text="Царь пышка"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/drawable"
        android:layout_toEndOf="@id/imageView"
         />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignStart="@id/title"
        android:layout_alignEnd="@+id/title"
        android:layout_toStartOf="@+id/drawable"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="6sp"
        android:textColor="@color/charcoal_grey"
        android:textSize="14sp"
        android:textStyle="normal"
        tools:text="Скидка 10% на выпечку \n по коду" />
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/warm_grey_two"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="8sp"
        tools:text="Лермонтовский пр, 52, МО №1"

        android:layout_alignStart="@id/title"
        android:layout_below="@id/description"
        android:layout_toStartOf="@+id/drawable"
        android:layout_marginTop="8dp"/>



</RelativeLayout>